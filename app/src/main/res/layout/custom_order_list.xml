<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/orderImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/food_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000"
        android:layout_alignBottom="@+id/orderImg"
        android:layout_toRightOf="@+id/orderImg"
        android:layout_toEndOf="@+id/orderImg"
        android:gravity="center|fill"
        android:textAlignment="center" />


    <TextView
        android:id="@+id/cost"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="50X15.0=75.0"
        android:layout_alignBottom="@+id/orderImg"
        android:layout_toRightOf="@+id/food_name"
        android:layout_toLeftOf="@+id/radioButton"
        android:layout_toStartOf="@+id/radioButton"
        android:gravity="fill_vertical|right" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/radioButton"
        android:layout_alignBottom="@+id/cost"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:checked="false"
        android:visibility="invisible"/>

</RelativeLayout>